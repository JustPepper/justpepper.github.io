*
    margin 0
    padding 0
    
body
    display flex
    justify-content center
    align-items center
    width 100%
    height 100%
    position fixed
    top 0
    left 0

.profile-image
    text-align center
    img
        max-width 175px
        border-radius 50%
        //filter grayscale(90%)
        //-webkit-filter grayscale(90%)
        //border 5px solid white
        //box-shadow 0 0 2px rgba(#333, .25)

.profile-bio
    color #41474c
    text-align center
    h1
        font-family: 'Raleway', sans-serif;
        font-size 24px
        padding 16px 0
    h2
        font-family: 'Merriweather', serif;
        font-size 14px
        a
            color #3cf
            text-decoration none
            letter-spacing 1px
 
.links
    display flex
    justify-content center
    padding 22px 0 0
    a
        width 32px 
        height 32px
        margin 0 22px
        &:hover
            svg
                fill #3cf
        svg
            width 32px 
            height 32px
            fill #41474c
            transition all 250ms